<h1>Listing suppliers</h1>

<table>
  <thead>
    <tr>
      <th>Company name</th>
      <th>Email</th>
      <th>Address1</th>
      <th>Address2</th>
      <th>City</th>
      <th>State</th>
      <th>Pincode</th>
      <th>Phone</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @suppliers.each do |supplier| %>
      <tr>
        <td><%= supplier.company_name %></td>
        <td><%= supplier.email %></td>
        <td><%= supplier.address1 %></td>
        <td><%= supplier.address2 %></td>
        <td><%= supplier.city %></td>
        <td><%= supplier.state %></td>
        <td><%= supplier.pincode %></td>
        <td><%= supplier.phone %></td>
        <td><%= link_to 'Show', supplier %></td>
        <td><%= link_to 'Edit', edit_supplier_path(supplier) %></td>
        <td><%= link_to 'Destroy', supplier, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

